{
  "name": "sushisamba-widget",
  "version": "1.0.0",
  "description": "Responsive HTML/CSS/JS project with TailwindCSS",
  "scripts": {
    "build:css": "tailwindcss -i ./styles/main-input.css -o ./styles/output.css",
    "dev:css": "tailwindcss -i ./styles/main-input.css -o ./styles/output.css --watch",
    "serve": "live-server --port=3000 --entry-file=index.html",
    "dev": "npm-run-all --parallel dev:css serve"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.0"
  }
}
